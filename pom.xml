<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.LB_Stuff</groupId>
	<artifactId>KataParty</artifactId>
	<version>1.3.0</version>
	<name>KataParty</name>
	<licenses>
		<license>
			<name>Unlicense</name>
			<url>http://unlicense.org/</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<packaging>jar</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>com.lb_stuff.command:PluginInfoCommand</include>
									<include>com.lb_stuff.command:PluginReloadCommand</include>
									<include>com.lb_stuff.service:ChatFilterService</include>
									<include>net.gravitydevelopment.updater:updater</include>
								</includes>
							</artifactSet>
							<relocations>
								<relocation>
									<pattern>com.lb_stuff.command</pattern>
									<shadedPattern>com.lb_stuff.kataparty.command</shadedPattern>
								</relocation>
								<relocation>
									<pattern>com.lb_stuff.service</pattern>
									<shadedPattern>com.lb_stuff.kataparty.api</shadedPattern>
								</relocation>
								<relocation>
									<pattern>net.gravitydevelopment.updater</pattern>
									<shadedPattern>com.lb_stuff.kataparty.updater</shadedPattern>
								</relocation>
							</relocations>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>plugin.yml</include>
					<include>com/lb_stuff/kataparty/config/config-template.yml</include>
					<include>com/lb_stuff/kataparty/config/config-defaults.yml</include>
				</includes>
			</resource>
		</resources>
		<finalName>${project.name}-${project.version}</finalName>
	</build>
	<scm>
		<connection>scm:git:git://github.com/LB--/KataParty.git</connection>
		<developerConnection>scm:git:ssh://git@github.com/LB--/KataParty.git</developerConnection>
		<url>https://github.com/LB--/KataParty</url>
	</scm>
	<repositories>
		<repository>
			<id>bukkit-repo</id>
			<url>http://repo.bukkit.org/content/groups/public/</url>
		</repository>
		<repository>
			<id>gravity-repo</id>
			<url>http://repo.gravitydevelopment.net</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.7.9-R0.2</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.gravitydevelopment.updater</groupId>
			<artifactId>updater</artifactId>
			<version>2.2</version>
		</dependency>
	</dependencies>
</project>
